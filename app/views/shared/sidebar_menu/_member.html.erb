<li>
  <%= form_tag set_community_session_communities_path, method: :get, class: "flex items-center p-2 text-gray-900 rounded-lg dark:text-white group", remote: true do %>
    <%= select_tag :community_id, options_from_collection_for_select(Community.all, :id, :name), prompt: "Select a community", class: "block w-full px-3 py-2 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white", onchange: "this.form.submit();" %>
  <% end %>
</li>
<% if @current_community.present? %>
  <li>
    <button type="button" class="flex items-center w-full p-2 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-700" aria-controls="dropdown-menu-1" data-collapse-toggle="dropdown-menu-1" aria-expanded="false">
      <svg class="w-5 h-5 text-gray-500 transition duration-75 dark:text-white group-hover:text-gray-900 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M14 6a4 4 0 0 1-4.899-3.899l-1.55.7A4 4 0 1 1 2.122 5.33l-.511 1.372A4 4 0 1 1 3.555 14.6l1.337 1.337A4 4 0 1 1 14 16.657V14.5a2.5 2.5 0 0 1 5 0V18a1 1 0 0 1-1 1h-1a10 10 0 1 1 0-20 10 10 0 0 1 1 19.95V18a1 1 0 0 0-1-1v-1.5a3.5 3.5 0 0 0-7 0v1.5a1 1 0 0 0 1 1v2a1 1 0 0 1-1 1h-6.95A10 10 0 0 1 14 6Z"/>
      </svg>
      <span class="flex-1 ml-3 text-left whitespace-nowrap" sidebar-toggle-item="">My community</span>
      <svg sidebar-toggle-item="" class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </button>
    <ul id="dropdown-menu-1" class="py-2 space-y-2 hidden">
      <li>
        <%= link_to @current_community, class: "flex items-center p-2 text-base text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-700" do %>
          Community
        <% end %>
      </li>
      <li>
        <a href="/roles" class="flex items-center p-2 text-base text-gray-900 transition duration-75 rounded-lg pl-11 group hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-700">Roles</a>
      </li>
    </ul>
  </li>
<% end %>
