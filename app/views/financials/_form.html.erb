<%= form_with(model: financial, class: "contents text-white flex flex-col gap-5 mt-4" ) do |form| %>
  <% if financial.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(financial.errors.count, "error") %> prohibited this financial from being saved:</h2>

      <ul>
        <% financial.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :community_id, placeholder: "community_id", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": financial.errors[:community_id].none?, "border-red-400 focus:outline-red-600": financial.errors[:community_id].any?}] %>
  </div>

  <div>
    <%= form.textarea :description, placeholder: "description", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": financial.errors[:description].none?, "border-red-400 focus:outline-red-600": financial.errors[:description].any?}] %>
  </div>

  <div>
    <%= form.text_field :price, placeholder: "price", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": financial.errors[:price].none?, "border-red-400 focus:outline-red-600": financial.errors[:price].any?}] %>
  </div>

  <div>
    <%= form.number_field :period, placeholder: "period", class: ["block shadow-sm rounded-md border bg-gray-700 px-3 py-2 mt-2 w-full", {"border-gray-600 focus:outline-blue-600": financial.errors[:period].none?, "border-red-400 focus:outline-red-600": financial.errors[:period].any?}] %>
  </div>

  <div>
    <%= form.submit nil, class:"font-bold px-4 py-2 bg-blue-600 text-white rounded-md shadow-md hover:bg-blue-500 inline-flex items-center" %>
  </div>
<% end %>